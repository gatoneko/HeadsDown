<% include _header %>
	<h1>Your Poll's link: <b><a href=<%= link %>><%= link %></a></b></h1>
	<br>
	<h1>Question: <%= title %></h1>
	<h2>Choices:</h2>
	<ul>
		<% for (var i = 0; i < choiceTitles.length; i++) { %>
			<li>
				<form action="/<%= link %>"" method="post">
					<button name="choiceIndex" value=<%= i %> >Vote!</button>
					<%= choiceTitles[i] %>
				</form> 
			</li>
		<% } %>
	</ul>
	<br><br>
	<h2>Results:</h2>
	<ul>
		<% for (var i = 0; i < choiceTitles.length; i++) { %>
			<li>
				<b><%= choiceTitles[i] %></b>
				<%= choiceVoteCount[i] %>
			</li>
		<% } %>
	</ul>
<% include _footer %>