<% include _header %>
<script type="text/javascript" src="./javascripts/poll_page.js"></script>
	<h1>Your Poll's link: <b><a href=<%= link %>><%= link %></a></b></h1>
	<br>
	<h1>Question: <%= title %></h1>
	<h2>Choices:</h2>
	<ul>
		<% for (var i = 0; i < choiceTitles.length; i++) { %>
			<li>
				<form action="/<%= link %>"" method="post">
					<button name="choiceIndex" value=<%= i %> onclick="disableAllButtons()">Vote!</button>
					<%= choiceTitles[i] %>
				</form> 
			</li>
		<% } %>
	</ul>
	<br><br>
<% include _results%>
