<% include _header %>
<script type="text/javascript" src="./javascripts/poll_page.js"></script>
<div class="main-content">
	<div class="border pure-u-1-5"></div>
	<div id="main-window" class="pure-u-3-5">

		<div class="content-box">

			<h1>Your Poll's link: <b><a href=<%= link %>><%= link %></a></b></h1>
		</div>
		<div class="content-box">

			<h1>Question: <%= title %></h1>
		</div>
		<% if (pollIsOpen) {%>
		<div class="content-box">
			<% include _choices %>
		</div>
		<% } else {%>
		<div class="content-box">
			<% include _poll_closed %>
		</div>
		<% }%>
		<div class="content-box">
			<% include _results %>
		</div>
	</div>
	<div class="border pure-u-1-5"></div>

</div>
<% include _footer %>