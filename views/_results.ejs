<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js"></script>
<h2>Results:</h2>
<ul>
	<% for (var i = 0; i < choiceTitles.length; i++) { %>
		<li>
			<b><%= choiceTitles[i] %></b>
			<%= choiceVoteCount[i] %>
		</li>
	<% } %>
</ul>
<canvas id="myChart" width="100" height="100"></canvas>
<script>
	var ctx = document.getElementById("myChart");
	var ct = <%- JSON.stringify(choiceTitles) %>;
	console.log(ct);
	var cvc = <%- JSON.stringify(choiceVoteCount) %>;
	var myChart = new Chart(ctx, {
	    type: 'bar',
	    data: {
	        labels: ct,
	        datasets: [{
	            label: '# of Votes',
	            data: cvc,
	            backgroundColor: [
	                'rgba(255, 99, 132, 0.2)',
	                'rgba(54, 162, 235, 0.2)',
	                'rgba(255, 206, 86, 0.2)',
	                'rgba(75, 192, 192, 0.2)',
	                'rgba(153, 102, 255, 0.2)',
	                'rgba(255, 159, 64, 0.2)'
	            ],
	            borderColor: [
	                'rgba(255,99,132,1)',
	                'rgba(54, 162, 235, 1)',
	                'rgba(255, 206, 86, 1)',
	                'rgba(75, 192, 192, 1)',
	                'rgba(153, 102, 255, 1)',
	                'rgba(255, 159, 64, 1)'
	            ],
	            borderWidth: 1
	        }]
	    },
	    options: {
	        scales: {
	            yAxes: [{
	                ticks: {
	                    beginAtZero:true
	                }
	            }]
	        }
	    }
	});
</script>

<script>
	document.addEventListener("DOMContentLoaded", function(event){
		var socket = io();
		socket.on('results-update', function(updatedCounts){
			console.log("updated");
		})
	});

</script>