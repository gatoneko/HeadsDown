<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
<!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js"></script> -->
<div class="card shadow-sm">
	<br>
	<div class="container">
		<h3 id="results" class="text-center">Results:</h3>
		<hr>

		<div class="row">
			<div class="col-sm-8 col-md-6">
				<canvas id="myChart" width="300" height="300"></canvas>
			</div>
			<div class="col-sm-4 col-md-6" results-table">
				<table class="table table-striped ">
					<thead class="thead-light">
						<th>Choice</th>
						<th>Votes</th>
					</thead>
					<tbody>
						<% for (var i = 0; i < choiceTitles.length; i++) { %>
						<tr>
							<td><%= choiceTitles[i] %></td>
							<td><%= choiceVoteCount[i] %></td>
						</tr>
						<% } %>	
					</tbody>
				</table>
			</div>
		</div>
		<script>
			var ctx = document.getElementById("myChart");
			var ct = <%- JSON.stringify(choiceTitles) %>;
			console.log(ct);
			var cvc = <%- JSON.stringify(choiceVoteCount) %>;
			var myChart = new Chart(ctx, {
				type: 'bar',
				data: {
					labels: ct,
					datasets: [{
						label: '# of Votes',
						data: cvc,
						backgroundColor: [
						'rgba(255, 99, 132, 0.2)',
						'rgba(54, 162, 235, 0.2)',
						'rgba(255, 206, 86, 0.2)',
						'rgba(75, 192, 192, 0.2)',
						'rgba(153, 102, 255, 0.2)',
						'rgba(255, 159, 64, 0.2)'
						],
						borderColor: [
						'rgba(255,99,132,1)',
						'rgba(54, 162, 235, 1)',
						'rgba(255, 206, 86, 1)',
						'rgba(75, 192, 192, 1)',
						'rgba(153, 102, 255, 1)',
						'rgba(255, 159, 64, 1)'
						],
						borderWidth: 1
					}]
				},
				options: {
					responsive: false,
					scales: {
						yAxes: [{
							ticks: {
								beginAtZero:true
							}
						}]
					}
				}
			});
		</script>
	</div>
	<div class="card shadow-sm">

